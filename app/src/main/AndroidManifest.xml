    package="org.techtown.chatting">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ChatRoom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StateMessageChange" />
        <activity android:name=".ProfileManagement" />
        <activity android:name=".ConfigActivity" />
        <activity android:name=".FriendList" >

        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".RandomChattingWaitingRoom" />
        <activity android:name=".Login" />
        <activity android:name=".RandomChattingRoom" />
        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>